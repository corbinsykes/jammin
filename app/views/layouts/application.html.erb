<!DOCTYPE html>
<html>
<head>
  <title>Jammin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAIY9iIAZvSyGDWT3v1X4aEDZRmIjGMClE&sensor=true">
    </script>
</head>
<body>
  <%= render '/layouts/navbar' %>

  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, raw(msg), class: "alert alert-#{name}") %>
    <% end %>
    <%= yield %>
  </div>
  <script type='text/javascript'>
  Jammin = {
    currentUser: <%= raw(@current_user.blank? ? {name: 'unknown', id: -1}.to_json : @current_user.to_json) %>
  }
  </script>
</body>
</html>
