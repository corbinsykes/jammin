<%= form_for @jam, remote: true do |f| %>
  <!--# f.select(:venue, Musician.all.map {|m| [m.firstname] [m.lastname]}, :prompt => "Select a Venue")  -->
  <!--  @current_user.firstname %>
  <!-- @current_user.lastname %>
  <!-- @venue.name %> -->
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :start_time %>
  <%= f.text_field :start_time %>
  <%= f.label :end_time %>
  <%= f.text_field :end_time %>
  <%= f.submit "Save Jam", class: 'btn btn-primary' %>
  <%= render partial: 'shared/instruments', locals: {instruments: @instruments, form: f} %>
<% end %>

<script type='text/javascript'>
$(document).ready(function(){
  $('.new_jam').bind('ajax:success', function(){
    alert("Jam session created!");
    $('#create-jam-session').modal('hide');
  });
  $('.new_jam').bind('ajax:error', function(){
    alert("Jam session couldn't be created. Please try again.");
    $('#create-jam-session').modal('hide');
  });
});
</script>